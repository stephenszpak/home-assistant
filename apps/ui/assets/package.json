{
  "name": "ui-assets",
  "private": true,
  "scripts": {
    "build": "tailwindcss -i ./css/app.css -o ../priv/static/assets/app.css && esbuild js/app.js --bundle --target=es2017 --outdir=../priv/static/assets",
    "watch": "concurrently \"npm:tailwind:watch\" \"npm:esbuild:watch\"",
    "tailwind:watch": "tailwindcss -i ./css/app.css -o ../priv/static/assets/app.css --watch",
    "esbuild:watch": "esbuild js/app.js --bundle --target=es2017 --outdir=../priv/static/assets --watch"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "tailwindcss": "^3.4.0",
    "concurrently": "^8.2.0"
  }
}

